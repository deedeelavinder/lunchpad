<%= form_for [:account, @order] do |order_form| %>

  <%= order_form.fields_for :ordered_items, @ordered_items do |menu_items| %>
    <fieldset>
      <%= menu_items.text_field :quantity, value: 0, size: 1 %>
      <span onclick="increment(<%= j menu_items.index.to_s %>)">[+]</span>
      <span onclick="decrement(<%= j menu_items.index.to_s %>)">[-]</span>

      <%= @ordered_items[menu_items.index].menu_item.name %>

      <%= menu_items.hidden_field :available_menu_item_id %>
    </fieldset>
  <% end %>

  <div class="actions">
    <%= order_form.submit %>
  </div>
<% end %>

