<div class="flex-boxes card-wrapper">

  <div class="flex-box card">

    <div class="page_header">
      <%= render partial: "accounts/account_profile_card" , locals: {account: @account} %>

      <h1 class="card_title">Review Order</h1>
    </div>

    <div class="card_links">
      <ul>
        <li><%= link_to 'Edit Order', edit_account_order_path %></li>
        <li><%= link_to 'Delete Order', [@account, @order], method: :delete %></li>
        <li><%= link_to 'See All Orders', account_orders_path %></li>
      </ul>
    </div>

    <%= render 'confirmation', ordered_items: @order.ordered_items %>

  </div>

</div>




