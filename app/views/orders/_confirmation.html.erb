<div class="form_date_span">
  <h2>Week of <%= (order.ordered_items[0].available_menu_item.date.beginning_of_week + 1).strftime("%b %e") %></h2>
</div>

<div class="table-table">
  <div class="table-heading">
    <div class="table-cell cell-align-left">
      Menu Item
    </div>
    <div class="table-cell cell-align-center">
      Quantity
    </div>
    <div class="table-cell cell-align-center">
      Price
    </div>
    <div class="table-cell cell-align-center">
      Subtotal
    </div>
  </div>

<% order.ordered_items.where('quantity > 0').each do |item| %>

  <% if @date != item.date %>
    <div class="table-subheading">
      <div class="table-cell">
        <strong><%= item.date.strftime("%a %m/%-e") %></strong>
        <% @date = item.date %>
      </div>
      <div class="table-cell">
      </div>
      <div class="table-cell">
      </div>
      <div class="table-cell">
      </div>
    </div>
  <% end %>

    <div class="table-row">
      <div class="table-cell">
        <%= item.menu_item.name %>
      </div>
      <div class="table-cell cell-align-center">
        <%= item.quantity %>
      </div>
      <div class="table-cell cell-align-center">
        $ <%= item.menu_item.price_dollars %>
      </div>
      <div class="table-cell cell-align-center">
        $ <%= item.subtotal_dollars %>
      </div>
    </div>

<% end %>

  <div class="table-footer">
    <div class="table-cell cell-align-left">
      Total:
    </div>
    <div class="table-cell">
    </div>
    <div class="table-cell">
    </div>
    <div class="table-cell cell-align-center">
      $<%= order.total_dollars %>
    </div>
  </div>

</div>

