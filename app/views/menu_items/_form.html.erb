<%= form_tag({controller: "menu_items", action: "create"}, method: "post") do %>
  <%= label_tag "Name:" %>
  <%= text_field :menu_item, :name %>

  <%= label_tag "Description:" %>
  <%= text_field :menu_item, :description %>

  <%= label_tag "Price:" %>
  <%= number_field :menu_item, :price, min: 0, step: 0.01 %>

  <%= label_tag "Availability Start Date:" %>
  <%= date_field :availability, :begin_date %>

  <%= label_tag "Availability End Date:" %>
  <%= date_field :availability, :end_date %>

  <%= label_tag "Day Available:" %>
  <%= select :availability, :day_of_week, options_for_select(@days) %>

  <%= submit_tag "Add Menu Item" %>
<% end %>