<% if user_signed_in?  %>
  <% if current_user.account_ownerships.count == 0 %>
    <p>Please make an account for each <strike>eater</strike> person who will need lunch.</p>
    <%= link_to "Create an Account", new_account_path(@account) %>
  <% else %>
    <h1>All Your Lunchbox</h1>
    <div class="panel">
    <ul><% current_user.accounts.each do |a|%>
      <div class="card">
        <h3><%= "#{a.name}'s Lunchbox" %></h3>
        <p><%= link_to "See all ordered lunches", account_orders_path(a) %></p>
        <p><%= link_to "Order lunch for next week", new_account_order_path(a, begin_date: @start_date.strftime("%Y-%m-%d"), end_date: @end_date.strftime("%Y-%m-%d")) %>
        <p><%= link_to "Update account", edit_account_path(a) %></p>
      </div>
    <% end %>
    </ul>
    </div>
    <div class="panel">
      <div class="card">
        <%= link_to "Add another account", new_account_path(@account) %>
      </div>
    </div>
  <% end %>
<% else %>
  <h1>Welcome To Lunchpad!</h1>
<% end %>