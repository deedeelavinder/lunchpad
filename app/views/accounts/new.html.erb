<h1>Add a Lunch Account</h1>
<% if user_signed_in? %>

  <%= form_for @account do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :section %>
      <%= f.text_field :section %>
    </div>

    <div class="actions">
      <%= button_tag "Create Account", :class => "form-button-lg" %>
    </div>

  <% end %>

<% else %>

  <p><%= link_to 'Log in to create a new account.', new_user_session_path %></p>

<% end %>
