<div class="flex-box card">
  <div class="flex-boxes card-row card-align-left">
    <div class="card-column-left">
      <div class="page_header">
        <%= render partial: "accounts/account_profile_card" , locals: {account: account} %>
      </div>

      <ul>

        <li><%= account.balance >= 0 ? 'Amount owed' : 'Credit:' %> $<%= account.balance_dollars %></li>
        <li><%= link_to 'Apply Payment', charges_path %></li>

        <% if account.orders.count > 0 %>
          <li><%= link_to "See Orders", account_orders_path(account) %></li>
        <% end %>
      </ul>
      <ul class="lunchbox_owners">
        <li><strong>Lunchbox Owners |</strong> <%= link_to raw('<i class="fa fa-share"></i>'), new_account_account_ownership_path(account) %></li>
          <% account.users.each do |n| %>
            <li>
              <div class="account_profile_image_small" style="background-color: rgba(<%= colorize(n.first_name).join(",") %>,1)">
                <%= n.first_name.first %>
              </div>
              <%= n.first_name %>
            </li>
          <% end %>
        <li>

        </li>
      </ul>
    </div>

    <div class="card-column-right card_margin">
      <%= render partial: 'shared/calendar', locals: { calendar: calendars[account.id] } %>
    </div>
  </div>
</div>