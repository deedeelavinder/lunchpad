<div class="flex-box card">
  <div class="flex-boxes card-row card-align-left">
    <div class="card-column-left">
      <div class="page_header">
        <%= render partial: "accounts/account_profile_card" , locals: {account: account} %>
      </div>

      <ul>
        <li><%= "Balance: $#{account.balance_dollars}" %></li>
        <li><a>Make Payment</a></li>
        <li><a>Share Lunchbox</a></li>

        <% if account.orders.count > 0 %>
          <li><%= link_to "See all orders", account_orders_path(account) %></li>
        <% end %>
      </ul>

    </div>

    <div class="card-column-right card_margin">
      <%= render partial: 'shared/calendar', locals: { calendar: calendars[account.id] } %>
    </div>
  </div>
</div>