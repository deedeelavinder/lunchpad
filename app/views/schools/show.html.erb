<div class="flex-boxes card-wrapper">

  <div class="flex-box card">

    <div class="page_header">
      <%= render "schools/school_profile_card", school: @school %>

      <h1 class="card_title">Orders</h1>
    </div>

    <div class="card_padding card-align-left">

      <h1><%= @school.name %> Administration</h1>

      <% if @school.logo_file_name %>
        <%= image_tag @school.logo.url(:thumb) %>
      <% end %>

      <div class="display-block">
        <h3><%= link_to "Edit School Profile", edit_school_path %></h3>
        <ul>
          <li><%= @school.description %></li>
          <li><%= @school.motto %></li>
          <li><%= @school.address %></li>
          <li><%= @school.phone %></li>
        </ul>
      </div>

  <div class="display-block">
    <h2>Get Order Report for Date</h2>
    <%= render 'order_filter' %>
  </div>
    <div class="display-block">
      <h2><%= link_to 'Manage Vendors & Menus', vendors_path(@school) %></h2>
    </div>
    <div class="display-block">
      <h2><%= link_to 'Manage Lunch Accounts', accounts_school_path(@school) %></h2>
    </div>
    <div class="display-block">
      <h2><%= link_to 'Manage School Admin Access', admins_school_path(@school) %></h2>
    </div>

    </div>
  </div>
</div>