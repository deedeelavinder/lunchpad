<h1>Vendors</h1>

<% if @vendors %>
  <% @vendors.each do |v| %>
    <li><strong><%= v.name %></strong></li>
    <li><%= v.email %></li>
    <li><%= v.phone_number %></li>
    <p><%= link_to "Vendor's Menu Items", vendor_path(v) %></p>
    <p><%= link_to "Update Vendor Information", edit_vendor_path(v) %></p>
  <% end %>
<% end %>

<h2><%= link_to "Add a Vendor", new_vendor_path(@vendor) %></h2>
