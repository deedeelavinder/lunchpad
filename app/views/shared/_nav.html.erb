<header>
  <div class="title">
    <%= link_to "Lunchpad", root_path %>
  </div>
    <ul>
    <% if user_signed_in?  %>
      <li>Logged in as <%= "#{current_user.first_name} #{current_user.last_name}" %></li>
      <li><%= link_to "Log Out", destroy_user_session_path, method: 'delete' %></li>
    <% else %>
      <li><%= link_to "Sign Up", new_user_registration_path %></li>
      <li><%= link_to "Log In", new_user_session_path %></li>
    <% end %>
    </ul>
</header>

<% if current_user.has_role? :admin, :any %>
  <div class="admin-bar">
    <% @school = School.with_role(:admin, current_user).first %>
      <div class="title"><%= @school.name %> Admin Portal</div>
    <div class="nav-links">
      <ul>
        <li><%= link_to 'Lunch Reports', order_school_path(@school, {filter: {date: Date.today}}) %></li>
        <li><%= link_to 'Vendors/Menus', vendors_path(@school) %></li>
        <li><%= link_to 'Lunch Accounts', accounts_school_path(@school) %></li>
        <li><%= link_to 'School Info', edit_school_path(@school) %></li>
        <li><%= link_to 'Off Days & Holidays', school_off_days_path(@school) %></li>
      </ul>
    </div>
  </div>
<% end %>