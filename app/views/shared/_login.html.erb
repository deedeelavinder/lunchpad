<div class="login-form">
  <%= form_for(:user, :url => session_path(:user)) do |f| %>
    <ul>
      <li>
        <div class="field">
          <%= f.label :email %>
          <%= f.text_field :email %>
        </div>
      </li>
      <li>
        <div class="field">
          <%= f.label :password %>
          <%= f.password_field :password %>
        </div>
      </li>
      <li>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      </li>
    <%= f.submit 'Sign in' %>
    <%= link_to "Forgot your password?", new_password_path(:user) %>
    </ul>
  <% end %>
</div>